<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<i class="fa fa-paper-plane-o"></i> Mailer Form
			</div>
			<div class="panel-body">
				<%= form_for @message do |f| %>

					<%= render 'phcnotifi/validations', :object => @message %>

					<div class="form-group">
						<label><%= f.label :name, "Full Name" %></label>
						<%= f.text_field :name, class: "form-control" %>
					</div>

					<div class="form-group">
						<label><%= f.label :email, "Email" %></label>
						<%= f.email_field :email, class: "form-control" %>
					</div>

					<div class="form-group">
						<label><%= f.label :subject, "Subject" %></label>
						<%= f.text_field :subject, class: "form-control" %>
					</div>

					<div class="form-group">
						<label><%= f.label :content, "Content" %></label>
						<%= f.text_area :content, class: "form-control" %>
					</div>

					<div class="actions">
						<%= f.submit 'Send', class: 'btn btn-primary' %>
					</div>

				<% end %>
			</div>
		</div>
	</div>
</div>
