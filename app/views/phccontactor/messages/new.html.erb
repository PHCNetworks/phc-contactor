<!-- Contact Container -->
<div class="section-container">

  <!-- Contact Tittle -->
  <h4 class="section-title m-b-20"><span>CONTACT US</span></h4>
  <!-- Contact Tittle -->

  <!-- Contact Form Container -->
  <div class="row row-space-30 f-s-12 text-inverse">
    <div class="col-md-12">

      <!-- Contact Form -->
      <%= form_with model: @message, local: true do |form| %>

        <!-- PHCNotifi Render Validation -->
        <%= render 'phcnotifi/default/validations', :object => @message %>
        <!-- PHCNotifi Render Validation -->

        <div class="form-group">
          <%= form.label :message_name, "Full Name" %> <span class="text-danger"> *</span>
          <%= form.text_field :message_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :message_email, "Email" %>
          <%= form.email_field :message_email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :message_subject, "Subject" %>
          <%= form.text_field :message_subject, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :message_content, "Content" %>
          <%= form.text_area :message_content, class: "form-control" %>
        </div>

        <div class="action">
          <%= form.submit 'Send', class: 'btn btn-primary' %>
        </div>

      <% end %>
      <!-- Contact Form -->

    </div>
  </div>
  <!-- Contact Form Container -->

</div>
<!-- Contact Container -->
